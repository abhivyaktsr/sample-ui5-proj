<mvc:View controllerName="islm.sample_project.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page title="Hello">
					<Table id="myTable" items="{textsModel>/rows}">
						<headerToolbar>
							<Toolbar>
								<Title id="table-title" 
									text="{parts: [{path: 'textsModel>/title'}, {path: 'textsModel>/rows/length'}], formatter: '.formatter.getTableTitle'}"/>
								<ToolbarSpacer/>
								<Button text="Add" press="addRow"/>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Text text="Select"/>
							</Column>
							<Column>
								<Text text="Input"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<!-- Bind the Select control to the languageModel -->
									<Select items="{textsModel>languages}" selectedKey="{textsModel>language}">
										<core:Item key="{textsModel>code}" text="{textsModel>description}"/>
									</Select>
									<Input value="{textsModel>text}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>